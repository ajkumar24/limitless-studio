{
  "name": "content-reach-hub",
  "version": "1.0.0",
  "description": "Content Operating System for content creation agencies",
  "main": "index.js",
  "scripts": {
    "dev": "docker compose --env-file .env.local -f docker-compose.dev.yml up",
    "dev:down": "docker compose -f docker-compose.dev.yml down",
    "dev:build": "docker compose --env-file .env.local -f docker-compose.dev.yml up --build",
    "dev:logs": "docker compose -f docker-compose.dev.yml logs -f web",
    "dev:logs:db": "docker compose -f docker-compose.dev.yml logs -f db",
    "prod": "docker compose --env-file .env.local up --build",
    "prod:down": "docker compose down",
    "prod:logs": "docker compose logs -f web",
    "clean": "docker compose -f docker-compose.dev.yml down -v && docker system prune -f",
    "rebuild": "docker compose -f docker-compose.dev.yml down && docker compose --env-file .env.local -f docker-compose.dev.yml up --build",
    "db:connect": "docker compose -f docker-compose.dev.yml exec db psql -U postgres -d content_reach_hub",
    "pgadmin": "echo 'pgAdmin: http://localhost:8080 (admin@example.com / adminDev123!)'"
  },
  "keywords": [
    "content",
    "management",
    "kanban",
    "agency",
    "collaboration"
  ],
  "author": "Content Reach Hub Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/content-reach-hub.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/content-reach-hub/issues"
  },
  "homepage": "https://github.com/your-org/content-reach-hub#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^27.0.0",
    "msw": "^2.11.3",
    "vitest": "^3.2.4"
  }
}
