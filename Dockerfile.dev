FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Set environment to development
ENV NODE_ENV=development

# Expose port
EXPOSE 3000

# Start development server with turbopack
CMD ["npm", "run", "dev", "--", "--turbopack", "--turbo"]