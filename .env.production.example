# =============================================================================
# Limitless Studio - Production Environment Configuration
# =============================================================================
#
# IMPORTANT: Copy this file to .env.production and update all values
# DO NOT commit .env.production to git
#
# Usage: cp .env.production.example .env.production
#

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=limitless_studio
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Full database connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:CHANGE_ME_STRONG_PASSWORD_HERE@db:5432/limitless_studio

# =============================================================================
# NextAuth Configuration
# =============================================================================
# Your production server IP with port (e.g., http://YOUR_SERVER_IP:3000)
NEXTAUTH_URL=http://YOUR_SERVER_IP:3000

# Generate a secure secret with: openssl rand -base64 32
NEXTAUTH_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_32

# =============================================================================
# pgAdmin Configuration
# =============================================================================
PGADMIN_DEFAULT_EMAIL=admin@yourdomain.com
PGADMIN_DEFAULT_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# =============================================================================
# Application Environment
# =============================================================================
NODE_ENV=production

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD_HERE@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# Queue Configuration
# =============================================================================
QUEUE_NAME_NOTIFICATIONS=notifications
QUEUE_NAME_SCHEDULED=scheduled-tasks
QUEUE_CONCURRENCY=5

# =============================================================================
# Slack Integration (Optional)
# =============================================================================
# Get webhook URL from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_NOTIFICATIONS_ENABLED=true
SLACK_CHANNEL_GENERAL=#content-team
SLACK_CHANNEL_ALERTS=#content-alerts

# =============================================================================
# Worker Configuration
# =============================================================================
WORKER_ENABLED=true
WORKER_CONCURRENCY=3

# =============================================================================
# Security & Performance
# =============================================================================
# Rate limiting (requests per second)
RATE_LIMIT_API=30
RATE_LIMIT_GENERAL=10

# Session settings
SESSION_MAX_AGE=86400

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://YOUR_SERVER_IP:3000

